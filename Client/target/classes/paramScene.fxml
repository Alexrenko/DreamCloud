<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="paramBaseBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientPac.gui.ParamController">
    <VBox alignment="CENTER" style="-fx-background-color: #202023" VBox.vgrow="ALWAYS">

        <HBox alignment="TOP_RIGHT">
            <Label onMouseClicked="#clickCloseLabel" style="-fx-text-fill: #a8720f" text="X">
                <HBox.margin>
                    <Insets right="10.0" top="8.0" />
                </HBox.margin></Label>
        </HBox>

        <HBox>
            <Label contentDisplay="CENTER" prefWidth="230" style="-fx-text-fill: #bfbfc0; -fx-font-size: 18; -fx-font-weight: 900;" text="DreamCloud">
                <HBox.margin>
                    <Insets bottom="25.0" left="35.0" />
                </HBox.margin></Label>
        </HBox>

        <HBox>
            <Label style="-fx-text-fill: #a8720f; -fx-font-size: 13;" text="Сервер:">
                <padding>
                    <Insets right="10.0" />
                </padding>
            <HBox.margin>
               <Insets left="10.0" top="3.0" />
            </HBox.margin></Label>
            <TextField fx:id="textFieldServer" style="-fx-background-color: #141415; -fx-font-size: 13; -fx-text-fill: #bfbfc0; -fx-border-color: #48484d;">
                <VBox.margin>
                    <Insets bottom="10.0" left="35.0" right="35.0" top="5.0" />
                </VBox.margin>
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></TextField>
         <padding>
            <Insets left="25.0" />
         </padding>
        </HBox>

        <HBox>
            <Label style="-fx-text-fill: #a8720f; -fx-font-size: 13;" text="Коммуникационный:">
            <HBox.margin>
               <Insets left="35.0" right="10.0" top="3.0" />
            </HBox.margin></Label>
            <TextField fx:id="textFieldCommPort" prefHeight="29.0" prefWidth="85.0" style="-fx-background-color: #141415; -fx-font-size: 13; -fx-text-fill: #bfbfc0; -fx-border-color: #48484d;">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></TextField>
        </HBox>

        <HBox>
            <Label style="-fx-text-fill: #a8720f; -fx-font-size: 13;" text="Транспортный:">
            <HBox.margin>
               <Insets left="35.0" right="46.0" top="3.0" />
            </HBox.margin></Label>
            <TextField fx:id="textFieldCarrierPort" prefHeight="29.0" prefWidth="85.0" style="-fx-background-color: #141415; -fx-font-size: 13; -fx-text-fill: #bfbfc0; -fx-border-color: #48484d;">
            <HBox.margin>
               <Insets bottom="25.0" />
            </HBox.margin></TextField>
        </HBox>

        <Button fx:id="saveButton" alignment="CENTER" onAction="#clickSaveButton" prefWidth="100" style="-fx-background-color: #154d34; -fx-text-fill: #bfbfc0; -fx-font-weight: 700; -fx-border-color: #000000;" text="Сохранить">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin></Button>
    </VBox>
</VBox>
